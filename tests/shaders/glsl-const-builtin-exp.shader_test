[require]
GLSL >= 1.20

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}

[fragment shader]
void main()
{
    const vec3 v = exp(vec3(0.0, -2.0, 4.0));
    gl_FragColor = vec4(v.x, v.y, v.z - 54.0, 1.0);
}

[test]
draw rect -1 -1 2 2
probe all rgb 1.0 0.1353352832366127 0.598150033144236
