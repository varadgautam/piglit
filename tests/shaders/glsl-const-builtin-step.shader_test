[require]
GLSL >= 1.20

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}

[fragment shader]
void main()
{
    const vec4 v1 = vec4(1.0, 1.0, 0.0, -1.0);
    const vec4 v2 = vec4(1.0, 0.0, 1.0, 0.0);
    const vec4 r = step(v1, v2);
    gl_FragColor = r;
}

[test]
draw rect -1 -1 2 2
probe all rgb 1.0 0.0 1.0
