[require]
GLSL >= 1.10

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}

[fragment shader]
int i = 0;

void foo()
{
	gl_FragColor -= vec4(0.1);
	i = 10;
}

void main()
{
	gl_FragColor = vec4(1.0);
	for (i = 0; i < 7; i++) {
		foo();
	}
}

[test]
clear color 0.0 0.0 0.0 0.0
clear
draw rect -1 -1 2 2
probe rgb 15 15 0.9 0.9 0.9

