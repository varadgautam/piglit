[require]
GLSL >= 1.20

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}

[fragment shader]
void main()
{
    const float x = ceil(-0.5);
    const float y = ceil(0.0);
    const float z = ceil(0.5);
    gl_FragColor = vec4(x, y, z, 1.0);
}

[test]
draw rect -1 -1 2 2
probe all rgb 0.0 0.0 1.0
