[require]
GLSL >= 1.10

[vertex shader]
void main()
{
	bvec4 e;

	e = equal(vec4(0.0, 0.0, 0.0, 0.0),
		  vec4(1.0, 0.0, 1.0, 1.0));

	if (e[1])
		gl_FrontColor = vec4(0.0, 1.0, 0.0, 0.0);
	else
		gl_FrontColor = vec4(1.0, 0.0, 0.0, 0.0);

	gl_Position = gl_Vertex;
}

[fragment shader]
void main()
{
	gl_FragColor = gl_Color;
}

[test]
draw rect -1 -1 2 2
probe rgb 1 1 0.0 1.0 0.0
