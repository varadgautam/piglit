[require]
GLSL >= 1.20

[vertex shader]
void main()
{
	gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
}

[fragment shader]
void main()
{
    const vec2 v = vec2(12.0, -5.0);
    const float length = length(v);
    gl_FragColor = vec4(0.0, length - 12.5, 0.0, 1.0);
}

[test]
draw rect -1 -1 2 2
probe all rgb 0 0.5 0
