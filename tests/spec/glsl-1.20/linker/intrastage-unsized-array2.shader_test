# Test implicitly sized arrays match explicitly sized arrays
# across the same stage.

[require]
GLSL >= 1.20

[vertex shader]
#version 120

varying vec4 color[];

void f()
{
  color[3] = vec4(1, 0, 0, 1);
}

[vertex shader]
#version 120

varying vec4 color[4];

void f();

void main()
{
  f();
  color[1] = vec4(1, 0, 0, 1);

  gl_Position = gl_Vertex;
}

[test]
link success
