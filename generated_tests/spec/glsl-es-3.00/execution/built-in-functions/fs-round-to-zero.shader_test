[require]
GL >= 3.0 es
GLSL >= 3.00 es

[vertex shader]
in vec4 vertex;

void main()
{
    gl_Position = vertex;
}

[fragment shader]
const vec4 red = vec4(1, 0, 0, 1);
const vec4 green = vec4(0, 1, 0, 1);

uniform vec2 func_input;

uniform highp uint expect0;

out vec4 frag_color;

void main()
{
    highp uint actual = packHalf2x16(func_input);

    if (false
        || actual == expect0
       ) {
        frag_color = green;
    } else {
        frag_color = red;
    }
}

